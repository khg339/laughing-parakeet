<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.cameldev.mypage.notice.NoticeMapper">

<insert id="create">
	INSERT INTO notice(
		noticeno
		,title
		,name
		,content
		,datetime
		,n_type
	) VALUES(
		#{noticeno}
		, #{title}
		, #{name}
		, #{content}
		, #{datetime}
		, #{n_type}
	)
</insert>

<select id="read" resultMap="NoticeResultMap">
	SELECT
		noticeno
		, title
		, name
		, content
		, datetime
		, n_type
	FROM
		notice
	WHERE noticeno = #{noticeno}
</select>

<update id="update">
	UPDATE notice
	SET
		title = #{title}
		, content = #{content}
	WHERE
		noticeno = #{noticeno}
</update>

<delete id="delete">
	DELETE FROM notice
	WHERE noticeno = #{noticeno}
</delete>

<selete id="listAll" resultType="NoticeVO">
	<![CDATA[
	SELECT
		noticeno,
		title,
		name,
		content,
		datetime,
		n_type
	FROM notice
	WHERE noticeno>0
	ORDER BY noticeno DESC, regdate DESC
	]]>
</selete>

<resultMap id="NoticeResultMap" type="NoticeVO">
	<id property="noticeno" column="noticeno"/>
	<result property="title" column="title"/>
	<result property="name" column="name"/>
	<result property="content" column="content"/>
	<result property="datetime" column="datetime"/>
	<resutl property="n_type" column="n_type"/>
</resultMap>

</mapper>
